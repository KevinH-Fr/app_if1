
<% if user_signed_in? %>

<br/>

      <h1 class="fa-solid fa-file-pen fa-2xl fw-bold fs-1"> - Resultats </h1>   
      <br/> <br/> <hr/> <br/>

  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Event</th>
        <th>Pilote</th>
        <th colspan="2">Ecurie</th>
        <th>Qualification</th>
        <th>Course</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @resultats.each do |resultat| %>
            <tr>
              <td> 

                <% eventID = resultat.event_id %>
                <%= "#{Event.find(eventID).date}" " | " "#{Event.find(eventID).circuit}" " | div " "#{Event.find(eventID).division}" %>

              </td>
              <td> <%=  pilote = Pilote.find(resultat.pilote_id).nom %>  
              
               <%  equipeId = Pilote.find(resultat.pilote_id).ecurie %>  
               
               <td>  <%=  Equipe.find(equipeId).nom %>  </td> 
               <td>  <%= image_tag Equipe.find(equipeId).image, 
                         style: "width: 400px; display: block", 
                         class: "img-fluid rounded" %>
               </td> 

              <td> <%= resultat.qualification %>  </td>
              <td> <%= resultat.course %>    </td>

                <%#= actions %>
                <td width="5%">
                    <%= link_to '', resultat, class:"fa-solid fa-eye btn btn-primary" %> 
                </td>
                <td width="5%">
                  <%= button_to '', resultat, class:"fa-solid fa-trash-can btn btn-danger", method: :delete, :onclick => "return confirm('SÃ»r ?')" %>
                </td> 
                <td width="5%">
                    <%= link_to "", edit_resultat_path(resultat), class:"fa-regular fa-pen-to-square btn btn-secondary" %> 
                </td> 

            </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Nouveau resultat", new_resultat_path, class:"btn btn-primary" %>

<% else %>

  <h3> Vous n'avez pas les droits...</h3>
  
<% end %>
