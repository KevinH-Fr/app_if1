<% if user_signed_in? %>

<br/>

      <h1 class="fa-solid fa-user fa-2xl fw-bold fs-1"> - Equipes </h1>   
      <br/> <br/> <hr/> <br/>

  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Nom</th>
        <th>Image</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @equipes.each do |equipe| %>
            <tr>
            
              <td> <%= link_to equipe.nom, equipe %> </td>
              <td> <%= image_tag equipe.image, style: "width: 400px; display: block", class: "img-fluid rounded" %> </td>

                <td width="5%">
                    <%= link_to '', equipe, class:"fa-solid fa-eye btn btn-primary" %> 
                </td>

                <td width="5%">
                  <%= button_to '', equipe, class:"fa-solid fa-trash-can btn btn-danger", method: :delete, :onclick => "return confirm('SÃ»r ?')" %>
                </td> 
              
                <td width="5%">
                    <%= link_to "", edit_equipe_path(equipe), class:"fa-regular fa-pen-to-square btn btn-secondary" %> 
                </td> 

            </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Nouveau equipe", new_equipe_path, class:"btn btn-primary" %>

<% else %>

  <h3> Vous n'avez pas les droits...</h3>
  
<% end %>
