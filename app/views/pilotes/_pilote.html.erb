<div id="<%= dom_id pilote %>">
  <p>
    <strong>Nom:</strong>
    <%= pilote.nom %>
  </p>

  <p>
    <strong>Statut:</strong>
    <%= pilote.statut %>
  </p>

  <p>
    <strong>Ecurie:</strong>
    <%= pilote.ecurie %>

 <%# si pas d'ecurie selectionnÃ©e, image blank, sinon logo ecurie %>
    <% if pilote.ecurie.blank?%>
      <%= image_tag 'no-image.png', alt: 'icon', width: '200' %>
    <% else %>
      <%= image_tag pilote.ecurie + '.png', alt: 'icon', width: '200' %>
    <% end %>

  </p>

  <p>
    <strong>Division:</strong>
    <%= pilote.division %>
  </p>

</div>
